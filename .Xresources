!look and feel
xterm.termName: xterm
xterm*scrollBar: false
xterm*loginshell: true
xterm*cursorBlink: true
xterm*background:   black
xterm*foreground:   gray
xterm.borderLess: true
xterm.cursorBlink: true

!font and locale
xterm*locale: true
xterm.utf8:     true
xterm*utf8Title: true
xterm*fontMenu*fontdefault*Label: Default
xterm*faceName:JetBrains Mono:antialias=True:pixelsize=20
xterm*boldFont:Sans:style=Bold:pixelsize=20
xterm*faceNameDoublesize:Microsoft YaHei:antialias=True:pixelsize=20
xterm*xftAntialias: true
XTerm*preeditType: Root
XTerm*allowSendEvents: true

xterm*charClass: 33:48,35:48,37-38:48,43:48,45-47:48,58:48,61:48,63-64:48,126:48,13312-40917:48
XTerm*cutNewline: false
XTerm*on2Clicks:  word
XTerm*on3Clicks:  line

xterm*eightBitInput: false
xterm*metaSendsEscape: true
xterm*altIsNotMeta: true
xetrm*altSendsEscape: true
