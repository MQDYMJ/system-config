#!/bin/bash

h=$(date +%H)
m=$(date +%M | perl -npe 's/^0+//')
m=$((m - m % 15))
m=$(printf %02d $m)

echo $h:$m
if test $# = 2; then
    h=$1
    m=$2
fi
for x in ~/system-config/etc/at/$h:$m ~/external/etc/at/$h:$m; do
    if test -e "$x"; then
        logdir=external
        if [[ $x =~ system-config ]]; then
            logdir=system-config
        fi
        logdir=~/.logs/at-tasks/$logdir
        mkdir -p $logdir

        (
            echo
            echo '****************************************************************'
            echo "running $x at $(date)"
            bash $x
        )>> $logdir/$(basename $x) 2>&1
    fi
done
