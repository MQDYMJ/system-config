#!/usr/bin/env bash
set -e
reverse=false
if test "$1" = -r; then
    reverse=true
    shift
fi

if test "$#" = 0; then
    set -- ''
fi
for x in ~/system-config/etc/rsync-into-git/*$1*.src; do
    if test ! -e $x; then
        exit 0
    fi
    src=$(readlink -f $x)
    dst=$(readlink -f ${x/%.src/.dst})
    if test $(basename $dst) = $(basename $src); then
        if test "$reverse" = true; then
            src=$(dirname $src)
            mkdir -p $src
        else
            dst=$(dirname $dst)
            mkdir -p $dst
        fi
    fi
    if test "$reverse" = true; then
        rsync -av $dst $src
    else
        rsync -av $src $dst
    fi
done
