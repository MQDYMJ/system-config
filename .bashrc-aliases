#!/bin/bash

alias arping='sudo arping'
alias quilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
alias aptitude='sudo aptitude'
alias umount='sudo umount'
mount() {
    if test $# = 0; then
        command mount
    else
        sudo mount "$@"
    fi
}
