#!/bin/bash

pcre=
if test "$#" = 1 -a -e "$1"; then
    pat=$(perl -ne 'print if m/defun bhj-occur-make-errors/..m/let.*bhj-occur-regexp/' ~/system-config/.emacs_d/lisp/bhj-defines.el|tail -n 1|perl -npe 's/.*(".*").*/$1/')
else
    pat=${1:-'"Error [0-9]+"'}
    pcre=-P
    echo pat is $pat
    shift
fi

echo grep -i -H -n $pcre -e "$pat" "$@" |bash | grep -v 'Failed to open dex file .\..: Failed to find magic in .\..|has no default or required localization|has no default translation|java-source-list: No such file or directory|ln: failed to create symbolic link.*File exists|".*failed.*"|".*error.*"|string .* is missing \d+ required localizations|Setting locale failed|find: `(src|phone/java|dummy)'\'': No such file or directory|cannot stat .vendor/qcom/proprietary/mm-camera/mm-camera2/media-controller/modules/isp2/test/8994/data/.*: No such file or directory|classes.jar: unknown package name of class file|warning: no entries written for string/|failed to reconstruct target deflate chunk 1|make: .*/target/product/icesky_msm8994/recovery.img. Error 1 .ignored.|cp: cannot stat .*/target/product/icesky_msm8994/root/init.recovery.*.rc.: No such file or directory' -P -i
