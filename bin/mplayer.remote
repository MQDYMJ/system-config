#!/usr/bin/env bash
echo mplayer.remote "$@" >> ~/.cache/system-config/logs/rsync-mplayer.log 2>&1
if test "$PULSE_SERVER"; then
    for x in "$@"; do
        if readlink -f "$x" | grep Music/like; then
            x=$(readlink -f "$x")
            x=${x%.mp3}
            ssh $PULSE_SERVER mkdir -p "$(printf %q "$(dirname "$x")")"/
            rsync "$x".* $PULSE_SERVER:"$(printf %q "$(dirname "$x")")"/ -av >> ~/.cache/system-config/logs/rsync-mplayer.log 2>&1
        fi
    done

    args=()
    for x in "$@"; do
        args=("${args[@]}" "$(printf %q "$x")")
    done
    ssh $PULSE_SERVER /usr/bin/mplayer "${args[@]}"
else
    /usr/bin/mplayer "$@"
fi
