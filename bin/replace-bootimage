#!/bin/bash

if echo $SHELLOPTS | grep -q xtrace; then
    export SHELLOPTS
fi

mydir=$(dirname $(readlink -f $0))
boot=
TEMP=$(getopt -o b: --long boot: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -b|--boot)
            boot=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

set -e

function die() {
    echo Error: "$@"
    exit -1
}
boot_part=$(my-adb 'echo /dev/block/platform/*/by-name/boot')
if test ! -e "$boot"; then
    if test "$boot" = adb; then
        my-adb -r echo hello
        my-adb -S shell sh -c "cat $boot_part > /data/boot.img"
        my-adb pull /data/boot.img .
        boot=boot.img
    elif test "$boot" = adb.recovery; then
        my-adb -r echo hello
        my-adb -S shell sh -c "cat $boot_part > /data/boot.img"
        my-adb pull /data/boot.img .
        boot=boot.img
    else
        die "boot image $boot not found"
    fi
fi
echo boot image is $boot

boot=$(readlink -f $boot)
tmpd=/tmp/$(basename $0).$$
rm -rf $tmpd
mkdir $tmpd
(
    cd $tmpd
    cp "$boot" $(basename "$boot")
    unbootimg $(basename "$boot")
)
replace-ramdisk -r $tmpd/ramdisk.img "$@"
(
    cd $tmpd
    bash -e mkbootimg.sh
    bboot=$(basename "$boot")

    if my-adb -r 'test -e /selinux_version && echo yes'$$ | grep yes$$; then
        set -x
        if test -e ~/etc/android/verity_private_dev_key; then
            verity_key=~/etc/android/verity_private_dev_key
        else
            verity_key=${mydir}/verity_private_dev_key
        fi
        PATH=/usr/bin:$PATH ~/src/github/android5-host/linux-x86/bin/boot_signer /boot $bboot $verity_key $bboot
    fi
    cp $(basename "$boot") "$boot"
)
if echo $SHELLOPTS | grep -q xtrace; then
    true
else
    rm -rf $tmpd
fi
