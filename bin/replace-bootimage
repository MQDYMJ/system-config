#!/bin/bash

if echo $SHELLOPTS | grep -q xtrace; then
    export SHELLOPTS
fi

boot=
TEMP=$(getopt -o b: --long boot: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -b|--boot)
            boot=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

set -e

function die() {
    echo Error: "$@"
    exit -1
}
boot_part=$(my-adb 'echo /dev/block/platform/*/by-name/boot')
if test ! -e "$boot"; then
    if test "$boot" = adb; then
        my-adb -r echo hello
        my-adb -S shell sh -c "cat $boot_part > /sdcard/boot.img"
        my-adb pull /sdcard/boot.img .
        boot=boot.img
    elif test "$boot" = adb.recovery; then
        my-adb -r echo hello
        my-adb -S shell sh -c "cat $boot_part > /sdcard/boot.img"
        my-adb pull /sdcard/boot.img .
        boot=boot.img
    else
        die "boot image $boot not found"
    fi
fi
echo boot image is $boot

boot=$(readlink -f $boot)
tmpd=/tmp/$(basename $0).$$
rm -rf $tmpd
mkdir $tmpd
(
    cd $tmpd
    cp "$boot" $(basename "$boot")
    unbootimg $(basename "$boot")
)
replace-ramdisk -r $tmpd/ramdisk.img "$@"
(
    cd $tmpd
    bash -e mkbootimg.sh
    cp $(basename "$boot") "$boot"
)
if echo $SHELLOPTS | grep -q xtrace; then
    true
else
    rm -rf $tmpd
fi
