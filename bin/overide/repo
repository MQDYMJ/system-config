#!/bin/bash
if test "$SYSTEM_CONFIG_INITED" != true; then
    . ~/system-config/.bashrc
fi
if test "$1" = sync; then
    set -- "$@" --no-tags
    time ~/system-config/bin/repo "$@" && my-rfa 'git config remote.$(repo-remote).tagopt --no-tags'
    exit
else
    exec ~/system-config/bin/repo "$@"
fi
