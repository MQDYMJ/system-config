#!/usr/bin/env bash

# edit remote files


## start code-generator "^\\s *#\\s *"
# generate-getopt r:remote
## end code-generator
## start generated code
TEMP=$( getopt -o r:h \
               --long remote:,help \
               -n $(basename -- $0) -- "$@")
declare remote=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -r|--remote)
            remote=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-r, '
            printf %-24s '--remote=REMOTE'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if ! test -w "$1" && yes-or-no-p -y "$1 not writable, use sudo (on remote)?"; then
    set -- "/ssh:$remote|sudo:root@${remote#*@}:$1"
else
    set -- "/scp:$remote:$1"
fi

e "$1"
