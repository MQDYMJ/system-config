#!/usr/bin/env bash

set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt -P m:msg='"auto commit at $(now)"'
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o m:h \
                      --long msg:,help \
                      -n $(basename -- $0) -- "$@")
declare msg="auto commit at $(now)"
eval set -- "$TEMP"
while true; do
    case "$1" in

        -m|--msg)
            msg=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-m, '
            printf %-24s '--msg=MSG...'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

(
    if ! lookup-file -e .git; then
        git init .
    fi
    git add .
    git commit -m "$msg"
    git push&
) >/dev/null 2>&1 || true
