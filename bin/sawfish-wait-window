#!/usr/bin/env bash


## start code-generator "^\\s *#\\s *"
# generate-getopt w:window t:time
## end code-generator
## start generated code
TEMP=$(getopt -o t:w:h \
              --long time:,window:,help \
              -n $(basename -- $0) -- "$@")
time=
window=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -t|--time)
            time=$2
            shift 2
            ;;
        -w|--window)
            window=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo
            echo
            echo Options and arguments:
            printf %06s '-t, '
            printf %-24s '--time=TIME'
            echo
            printf %06s '-w, '
            printf %-24s '--window=WINDOW'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done

## end generated code

if test "$time" && test "$time" -lt 50; then
    time=50
elif test $? = 2; then
    time=50
fi

for x in $(seq 1 $time); do
    if test "$(sawfish-client -e '(window-exists-p "'$window'")')" = t; then
        exit 0
    fi
    sleep .1
done
exit 1
