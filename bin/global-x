#!/bin/bash

declare comment_doc=$(
    cat <<'EOFe9576f8668e0' | grep -v '#.*org-mode%'
# {%org-mode%}

# {%/org-mode%}
EOFe9576f8668e0
        )

## start code-generator "^\\s *#\\s *"
# generate-getopt -P '?"${comment_doc}"' \
    # eedit
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o eh \
                      --long edit,help,no-edit \
                      -n $(basename -- $0) -- "$@")
declare edit=false
eval set -- "$TEMP"
while true; do
    case "$1" in

        -e|--edit|--no-edit)
            if test "$1" = --no-edit; then
                edit=false
            else
                edit=true
            fi
            shift

            ;;
        -h|--help)
            set +x
            echo -e "${comment_doc}"
            echo
            echo Options and arguments:
            printf %06s '-e, '
            printf %-24s '--[no-]edit'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test "${edit}" = true; then
    if true; then
        set -x
        exec >& ~/tmp/${0##*/}.$$.log
        . atexit bash -c "declare -x -p; ew ~/tmp/${0##*/}.$$.log; rm -f ~/tmp/${0##*/}.$$.log"
    fi
fi

set -x
export SHELLOPTS
"$@"
