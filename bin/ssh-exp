#! /usr/bin/expect -f

set timeout 600

set host [lindex $argv 0]
spawn ssh $host
expect {
    -re {#|\$} {
        if {[llength $argv] == 2} {
            send "exec bash -c '\n"
            set arg [lindex $argv 1]
            set arg [join [split $arg "'"] {'\''}]
            send -- "$arg'\n"
        } else {

            for {set i 1} {$i < [llength $argv]} {incr i} {
                send -- [string cat "'" [string map {"'" "'\\''"} [lindex $argv $i]] "'"]
                send " "
            }
            send ";exit\n"
        }
    }
}
interact
catch wait result
exit [lindex $result 3]

