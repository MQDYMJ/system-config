#!/bin/bash

exec 1>&2 # must not change this line, because onmyoji depend on it for orientation.

# echo phone_sticky=$phone_sticky phone_width=$phone_width phone_height=$phone_height $(debug-args $0 "$@") >> ~/tmp/adb-screenshot.args.$ANDROID_SERIAL

## start code-generator "^\\s *#\\s *"
# generate-getopt x:x=0 y:y=0 s:s=0 '?size' @:cord-orientation eedit @:sticky='${phone_sticky:-0}' @system-screencap
## end code-generator
## start generated code
TEMP=$( getopt -o es:x:y:h \
               --long cord-orientation:,edit,s:,sticky:,system-screencap,x:,y:,help,no-edit,no-system-screencap \
               -n $(basename -- $0) -- "$@")
declare cord_orientation=
declare edit=false
declare s=0
declare sticky=${phone_sticky:-0}
declare system_screencap=false
declare x=0
declare y=0
eval set -- "$TEMP"
while true; do
    case "$1" in

        --cord-orientation)
            cord_orientation=$2
            shift 2

            ;;
        -e|--edit|--no-edit)
            if test "$1" = --no-edit; then
                edit=false
            else
                edit=true
            fi
            shift

            ;;
        -s|--s)
            s=$2
            shift 2

            ;;
        --sticky)
            sticky=$2
            shift 2

            ;;
        --system-screencap|--no-system-screencap)
            if test "$1" = --no-system-screencap; then
                system_screencap=false
            else
                system_screencap=true
            fi
            shift

            ;;
        -x|--x)
            x=$2
            shift 2

            ;;
        -y|--y)
            y=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf "%06s" " "
            printf %-24s '--cord-orientation=CORD_ORIENTATION'
            echo
            printf %06s '-e, '
            printf %-24s '--[no-]edit'
            echo
            printf %06s '-s, '
            printf %-24s '--s=S'
            echo size
            printf "%06s" " "
            printf %-24s '--sticky=STICKY'
            echo
            printf "%06s" " "
            printf %-24s '--[no-]system-screencap'
            echo
            printf %06s '-x, '
            printf %-24s '--x=X'
            echo
            printf %06s '-y, '
            printf %-24s '--y=Y'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done


## end generated code

if [[ "$s" =~ x ]]; then
    W=${s%x*}
    H=${s#*x}
else
    W=$s
    H=$s
fi

if test "$cord_orientation" = 1 -a "${phone_width}" -a "${phone_height}" && test "${phone_width}" -gt "${phone_height}"; then
    tmp_x=$x
    x=$((1080-$y-$H))
    y=$tmp_x
    tmp_w=$W
    W=$H
    H=$tmp_w
fi

X=$(($x + $W))
Y=$(($y + $H))

phone_width=${phone_width:-2160}
phone_height=${phone_height:-1080}

if test "$cord_orientation" = 1 -a "${phone_width}" -a "${phone_height}" && test "${phone_width}" -gt "${phone_height}"; then
    if test "$phone_width" -a "$Y" -gt "$phone_width"; then
        Y=$phone_width
        y=$((Y - H))
    fi

    if test "$phone_height" -a "$X" -gt "$phone_height"; then
        X=$phone_height
        x=$((X - H))
    fi
else
    if test "$phone_width" -a "$X" -gt "$phone_width"; then
        X=$phone_width
    fi

    if test "$phone_height" -a "$Y" -gt "$phone_height"; then
        Y=$phone_height
    fi
fi

x=$((x < 0 ? 0 : x))
y=$((y < 0 ? 0 : y))


if test "${system_screencap}" = true; then
    adb shell screencap /sdcard/screen.png
    sd_file=screen.png
else
    if test -z "$1"; then
        mkdir -p ~/tmp/weekly
        set -- ~/tmp/weekly/$(now.).jpg
    fi
    sd_file=$(basename "$1").jpg
    adb shell /data/data/com.android.shell/screencap \
        -x $x -y $y -X $X -Y $Y $(
        if test "$sticky" != 0; then
            echo -s $sticky;
        fi
        ) /sdcard/$sd_file
fi

if test "$1"; then
    adb pull /sdcard/$sd_file ~/tmp/$$-$sd_file

    if test "${1##*.}" != ${sd_file##*.}; then
        action=convert
    else
        action=mv
    fi
    $action ~/tmp/$$-$sd_file "$1"
    rm -f ~/tmp/$$-$sd_file
    if test "${edit}" = true; then
        gimp "$1"&
    fi
    exit
fi
