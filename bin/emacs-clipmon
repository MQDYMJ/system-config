#!/bin/bash

# works with glipper, put the argument into kill-ring

tmpfile=~/tmp/emacs-clipmon.$$.txt
. atexit rm -f $tmpfile
echo -n "$@" > $tmpfile

emacsclient -e "$(
cat <<'EOFc045b40a70cf' | . .replace-%% -- | grep -v '^;'
; {%emacs-lisp-mode%}
(with-temp-buffer
  (insert-file "<%tmpfile%>")
  (let ((text (buffer-substring-no-properties (point-min) (point-max))))
    (unless (string= text (car kill-ring))
      (setq kill-ring (cons text kill-ring))
      ))
  nil)
; {%/emacs-lisp-mode%}
EOFc045b40a70cf
)"
