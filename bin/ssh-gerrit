#!/bin/bash

## start code-generator "^\\s *#\\s *"
# generate-getopts h:host='${GERRIT_HOST}' p:port u:user @admin
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o h:p:u:h \
                      --long admin,host:,port:,user:,help,no-admin \
                      -n $(basename -- $0) -- "$@")
declare admin=false
declare host=${GERRIT_HOST}
declare port=
declare user=
eval set -- "$TEMP"
while true; do
    case "$1" in

        --admin|--no-admin)
            if test "$1" = --no-admin; then
                admin=false
            else
                admin=true
            fi
            shift

            ;;
        -h|--host)
            host=$2
            shift 2

            ;;
        -p|--port)
            port=$2
            shift 2

            ;;
        -u|--user)
            user=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf "%06s" " "
            printf %-24s '--[no-]admin'
            echo
            printf %06s '-h, '
            printf %-24s '--host=HOST'
            echo
            printf %06s '-p, '
            printf %-24s '--port=PORT'
            echo
            printf %06s '-u, '
            printf %-24s '--user=USER'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

repo_push_url=$(repo-push-url 2>/dev/null || true)


if test -z "$host"; then
    host=$(
        echo "${repo_push_url}" | perl -ne '
s,^\w+://,,; # remove url scheme
s,^[^@]*@,,; # remove USER@
print $1 if m,^(.*?)[:/],
' | grep . ||
            echo ${scm_gerrit_server}
        )
    if test -z "$host"; then
        die "Can't find gerrit host"
    fi
fi


if test -z "${port}"; then
    port=$(
        echo ${repo_push_url} | perl -ne 'print $1 if m,ssh://.*?:(\d+)/,' | grep . ||
            echo 29418
        )
fi

if test "${user}"; then
    user=${user}@
elif test "${admin}" = true; then
    user=${scm_gerrit_admin_user}@
else # -z ${user}
    user=$(
        echo ${repo_push_url} | perl -ne 'print $1 if m,^ssh://(.*)\@,' | grep . ||
            echo ${scm_gerrit_user} | grep . ||
            git config --global user.email | perl -pe 's,\@.*,,' | grep . ||
            echo $USER
        )@
fi

ssh ${user}$host -p ${port} gerrit "$@"
