#!/bin/bash
activity=$(adb shell dumpsys window|grep mFocusedWindow|perl -npe 's/.*?(\S+)}$/$1/')
if test $(basename $0) = adb-top-activity; then
    echo $activity
    if is-tty-io; then
        echo $activity | putclip
    fi
    exit
fi
if test "$activity" = "$1"; then
    true
else
    false
fi
