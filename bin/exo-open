#!/bin/bash
if test "$#" = 1 && [[ "$1" =~ file:///.*% ]]; then
    set -- "$(echo "$1"|un-urlify|perl -npe 's,^file:/*,/,')"
    if test ! -e "$1"; then
        if test -e "${1%,*}",*; then
            set -- "${1%,*}",*
        fi
    fi
    echo "$@" > ~/tmp/1.txt
    set -x
    exec >> ~/tmp/1.txt 2>&1
fi
/usr/bin/exo-open "$@"

if [[ $1 =~ /Maildir/ ]]; then
    sleep 1
    if timed-run 1 emacsclient -e '"hel''lo"' | grep 'hello'; then
        (kmail-view "$1" ) >/dev/null 2>&1&
    fi
fi
