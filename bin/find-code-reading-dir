#!/usr/bin/env bash

start=${1:-.}

start=$(readlink -f "$start")
db_dir=$HOME/.cache/system-config/for-code-reading$start

while test "$db_dir" != /; do
    if test -e "$db_dir"/.beatags; then
        echo ${db_dir#$HOME/.cache/system-config/for-code-reading}
        exit 0
    fi
    db_dir=$(dirname $db_dir)
done
exit -1
