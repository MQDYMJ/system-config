#!/usr/bin/env bash

wait() {
    local p
    local ret=0
    for p in $(jobs -p); do
        echo wait for $p
        if builtin wait "$p"; then
            true
        else
            ret=$?
        fi
    done
    return $ret
}


if wait; then
    echo "所有后台进程都正常退出了。。。"
    true # must not exit!
else
    ret=$?
    echo "有些后台程序非正常退出了。。。"
    exit $ret
fi
