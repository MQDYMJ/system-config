#!/usr/bin/env perl

use strict;
use File::Glob qw(:glob :nocase);
use Fcntl qw(:flock SEEK_END);


my $pattern;

$pattern = "*$ARGV[0]*";
shift @ARGV;

our $first_file = 1;
sub lookup_up_file_1dir($) {
    my ($dir) = @_;
    if (1) {
        chdir $dir or return;
        my @files = glob($pattern);
        for my $file (@files) {
            my $match = 1;
            for my $matcher (@ARGV) {
                if ($file !~ m/$matcher/i) {
                    $match = 0;
                    last;
                }
            }
            if ($match) {
                flock STDOUT, LOCK_EX;
                unless ($file =~ m/~/) {
                    print "$dir/$file\n";
                    our $first_file;
                    if ($first_file == 1) {
                        $first_file = 0;
                        if (system("yes-or-no-p -y '$dir/$file: your file?'") == 0) {
                            exit 0;
                        }
                    }
                }
                flock STDOUT, LOCK_UN;
            }
        }
    }
}

open my $where, "<", glob("~/.cache/system-config/.where") or die "can not open ~/.cache/system-config/.where";
my @dirs = (<$where>);
map {chomp; lookup_up_file_1dir($_)} @dirs;
