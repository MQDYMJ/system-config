#!/bin/bash

# 显示用户的 ldap 组名及其描述

## start code-generator "^\\s *#\\s *"
# generate-getopt -P u:user g:group-regexp
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o g:u:h \
                      --long group-regexp:,user:,help \
                      -n $(basename -- $0) -- "$@")
declare group_regexp=
declare user=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -g|--group-regexp)
            group_regexp=$2
            shift 2

            ;;
        -u|--user)
            user=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-g, '
            printf %-24s '--group-regexp=GROUP_REGEXP'
            echo
            printf %06s '-u, '
            printf %-24s '--user=USER'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

groups=$(
    comp-mail -d $user -m memberOf | pn 2 | pn 1 ,
      )

for g in ${groups}; do
    if [[ $g =~ $group_regexp ]]; then
        echo $g
        comp-mail -d $g -m descr
    fi
done
