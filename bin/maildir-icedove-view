#!/bin/bash

me=$(readlink -f $0)
if test ! -e "$me"; then
    me=$(readlink -f "$(which $0)")
    if test ! -e "$me"; then
        die "Can't find out about me"
        exit 1
    fi
fi
b0=$(basename $0)

if test ! -e "$1"; then
    echo "$1" > ~/tmp/x.eml
    bhj-notify $b0 "$1 not exist"
    die "Error: Usage $(basename $0) MAILDIR-EMAIL-FILE"
fi

cp "$1" ~/tmp/x.eml
icedove ~/tmp/x.eml
