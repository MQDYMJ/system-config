#!/usr/bin/env bash

ip=$(curl -s ddns.oray.com/checkip|sed -e 's/.*Current IP Address: \([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\).*/\1/')
if test -z "$ip"; then
    ip=$(curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//')
fi

if test -z "$ip"; then
    ip=$(wget http://ipinfo.io/ip -qO -)
fi

echo $ip
