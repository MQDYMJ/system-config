#!/bin/bash

if (
    set -e
    version=$(offlineimap --version | perl -npe 's/\.//g')
    if test $version -lt 655; then
        exit 1
    fi
    offlineimap
    exec tsocks offlineimap
); then
    fail=false
else
    fail=true
fi

if test $fail = true; then
    hour=$(date +%H|perl -npe 's/^0*//')
    minute=$(date +%M)
    if ((hour % 3 == 0 && minute < 14)); then
        false
    fi
fi
exit 0;
