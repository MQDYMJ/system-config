#!/bin/bash
set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt -P p:pid-or-regexp v:variable='".*"'
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o p:v:h \
                      --long pid-or-regexp:,variable:,help \
                      -n $(basename -- $0) -- "$@")
declare pid_or_regexp=
declare variable=".*"
eval set -- "$TEMP"
while true; do
    case "$1" in

        -p|--pid-or-regexp)
            pid_or_regexp=$2
            shift 2

            ;;
        -v|--variable)
            variable=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-p, '
            printf %-24s '--pid-or-regexp=PID_OR_REGEXP'
            echo
            printf %06s '-v, '
            printf %-24s '--variable=VARIABLE'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if cd /proc/$pid_or_regexp/ >/dev/null 2>&1; then
    true
else
    process=$(
        select-output-line -p "Which process do you want to check" ps.pl "$pid_or_regexp !select-output-line"
       )
    cd /proc/$(echo "${process}"|pn 1)/
fi

cat environ | tr '\000' '\n' | grep -P -e "${variable}="
