#!/bin/bash
set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt -P p:pid-or-regexp e:env-value-regexp='".*"' suse-sudo
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o e:p:sh \
                      --long env-value-regexp:,pid-or-regexp:,use-sudo,help,no-use-sudo \
                      -n $(basename -- $0) -- "$@")
declare env_value_regexp=".*"
declare pid_or_regexp=
declare use_sudo=false
eval set -- "$TEMP"
while true; do
    case "$1" in

        -e|--env-value-regexp)
            env_value_regexp=$2
            shift 2

            ;;
        -p|--pid-or-regexp)
            pid_or_regexp=$2
            shift 2

            ;;
        -s|--use-sudo|--no-use-sudo)
            if test "$1" = --no-use-sudo; then
                use_sudo=false
            else
                use_sudo=true
            fi
            shift

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-e, '
            printf %-24s '--env-value-regexp=ENV_VALUE_REGEXP'
            echo
            printf %06s '-p, '
            printf %-24s '--pid-or-regexp=PID_OR_REGEXP'
            echo
            printf %06s '-s, '
            printf %-24s '--[no-]use-sudo'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test -d /proc/$pid_or_regexp/; then
    processes=(
        $pid_or_regexp
    )
    true
else
    processes=(
        $(
            ps.pl "$pid_or_regexp !select-output-line" | pn 1
        )
    )
fi

if test "$use_sudo" = true; then
    sudo=sudo
else
    sudo=
fi

for p in "${processes[@]}"; do
    if test "$p" = $$; then
        continue
    fi
    if test -r "/proc/$p/environ" &>/dev/null || test "$use_sudo" = true; then
        echo -n "$p "; $sudo cat /proc/$p/environ | tr '\000' '\n' | grep -P -e "${env_value_regexp}" || echo
    fi
done | grep -v '^\d+ $' -P
