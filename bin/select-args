#!/bin/bash


## start code-generator "^\\s *#\\s *"
# generate-getopt p:prompt='"Please enter your selection"' i:init-input oreorder-history
## end code-generator
## start generated code
TEMP=$(getopt -o oi:p:h \
              --long reorder-history,init-input:,prompt:,help,no-reorder-history \
              -n $(basename -- $0) -- "$@")
reorder_history=false
init_input=
prompt="Please enter your selection"
eval set -- "$TEMP"
while true; do
    case "$1" in

        -o|--reorder-history|--no-reorder-history)
            if test "$1" = --no-reorder-history; then
                reorder_history=false
            else
                reorder_history=true
            fi
            shift
            ;;
        -i|--init-input)
            init_input=$2
            shift 2
            ;;
        -p|--prompt)
            prompt=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo
            echo
            echo Options and arguments:
            printf %06s '-i, '
            printf %-24s '--init-input=INIT_INPUT'
            echo
            printf %06s '-p, '
            printf %-24s '--prompt=PROMPT'
            echo
            printf %06s '-o, '
            printf %-24s '--[no-]reorder-history'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done


## end generated code

if test "$reorder_history" = true; then
    order=-o
else
    order=
fi

if test "$init_input"; then
    export ORIGINAL_MATCHER=$init_input
fi

select-output-line $order -p "$prompt" -- bash -c 'for x in "$@"; do echo "$x"; done' true "$@"
