#!/bin/bash

set -e

shopt -s nocasematch

if echo $SHELLOPTS | grep -q xtrace; then
    exec 2> ~/tmp/sawfish-start-special.log
fi

special_tag=$1
program=$2
window_class=${3:-$program}

if ! [[ $special_tag =~ ^[-a-z]+$ ]]; then
    die "tag '$special_tag' is dangerous"
fi

if ! [[ $program =~ ^[-a-z]+$ ]]; then
    die "program '$program' is dangerous"
fi


sawfish_find_tagged_window_command=$(
    cat <<EOF
; {%sawfish%}
(catch 'found
  (mapc
   (lambda (w)
     (when (eq (window-get w 'special) '$special_tag)
       (bhj-activate-window w)
       (throw 'found '$special_tag)))
   (managed-windows)))
; {%/sawfish%}
EOF
                                  )

if test "$(sawfish-client -e "$sawfish_find_tagged_window_command")" = $special_tag; then
    exit 0
else
    old_top_window=$(sawfish-client -e "(input-focus)")
    $program&
    window_match=
    for x in $(seq 1 30); do
        if test "$(sawfish-client -e "(input-focus)")" = "$old_top_window"; then
            sleep .5
            continue
        fi
        if [[ $(sawfish-client -e '(window-class (input-focus))') =~ $window_class ]]; then
            window_match=-y
            break
        fi
        sleep .5
    done
    set -x
    exec &> ~/tmp/sawfish-start-special.log

    if EMACS=t sawfish-window mark --with-mark yes-or-no-p $window_match "Is the top window special for $special_tag"; then
        (
            sawfish_apply_tag_command=$(
                cat <<EOF
; {%sawfish%}
(window-put (car (window-order)) 'special '$special_tag)
; {%/sawfish%}
EOF
                                     )
            sawfish-client -e "$sawfish_apply_tag_command"
        )
    fi
fi

# Local Variables: #
# eval: (mmm-mode 1) #
# End: #
