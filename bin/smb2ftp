#!/bin/bash
set -e
set -- "$(readlink -f "${1:-.}")"
smb-pull "$1" ~/today/
target=$(basename "$1")
source=$target
cd ~/today/
if test "$2"; then
    target=$(basename "$2")
fi

tar czfv "${target}.tgz" "$source"
lftp -c "connect ftp://foxconn:Bg1upNVztqgSo@172.16.16.220/; put '${target}'.tgz"
rm "$source" -rf
rm ${target}.tgz -f
