#!/bin/bash

if test "$#" = 0; then
    sawfish-help-key
    set -- "$(getclip)"
    if ! EMACS=t yes-or-no-p "fix $1"; then
        exit 0
    fi
fi

unbind_statements=$(
    for k in "$@"; do
        for m in global-keymap window-keymap; do
            cat <<EOF
; {%sawfish-mode%}
(unbind-keys $m "$k")
; {%/sawfish-mode%}
EOF
        done
    done | grep -v 'sawfish-mode%'
                 )



sawfish_cmd=$(cat <<EOF | . .replace-%% --
; {%sawfish-mode%}
(progn
  <%unbind-statements%>
  )
; {%/sawfish-mode%}
EOF
              )
sawfish-client -e "$sawfish_cmd"
