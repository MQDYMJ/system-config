#!/bin/bash

if test "$(get-about-me mac)" != unknown; then
    get-about-me mac
    exit
fi

case $(uname) in
    Darwin|Linux)
        ifconfig | grep -B 1 -P -e '^\s+ether\s+'|perl -ne '
            if (m/^p2p\d+:/) {
                $p2p = 1;
            } elsif (m/^\w+:/) {
                $p2p = 0;
            } elsif (m/^\s+ether\s+([a-f0-9:]{17}\b)/i) {
                unless ($p2p) {
                    print $1;
                    exit 0
                }
            } '
        ;;
    CYGWIN*)
        ifconfig /all | tr -d '\r' | perl -ne 'if (m/eth\d+:\s*$/)
            {
                while (<>) {
                    if (m/Physical Address.*:\s*(.*)/) {
                        print lc($1);
                        exit;
                    }
                }
            }'
        ;;
esac |head -n 1|
perl -npe 's/:/-/g; s/\s//g; $_ = lc $_'
