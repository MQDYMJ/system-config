#!/usr/bin/env bash

export PATH=~/src/github/lww-out/debug:$PATH
export OLDHOME=~
while test $(ifconfig|grep 'inet addr'|wc -l) -lt 2; do # wait for a network connection
    sleep 5
done

if test -d "$1"; then
    set -- $(readlink -f "$1")
    export DO_NOT_LOOP=true
fi

cd /tmp

flag=~/.config/system-config/no-ww

function start-ww() {
    mkdir -p ~/.cache/system-config/logs
    mkdir -p ~/.config
    if test ~ != $OLDHOME; then
        ln -s $OLDHOME/.config/ibus ~/.config/ -f
    fi

    (
        while true; do
            if test -e $flag; then
                exit
            fi
            (
                flock 9
                $(which AliWangWang)
            )
            if test "$DO_NOT_LOOP"; then
                break
            fi
            sleep 5
        done&
    ) 9> ~/.cache/system-config/logs/ww.lock
}

if test -d "$1"; then
    HOME=$1 start-ww
else
    start-ww
fi
