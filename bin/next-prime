#!/usr/bin/env bash
function is-prime() {
    local x=$1
    sqrt=$((x/2))

    while (( sqrt * sqrt >= x)); do
	sqrt=$((sqrt/2))
    done

    sqrt=$((sqrt*2))
    
    for div in $(seq 2 $sqrt); do
	if (( x % div == 0 )); then
	    return 1
	fi
    done
    return 0
}

function debug() {
    echo "$@" 1>&2
}

start=$1
while ! is-prime $start; do
    debug "$start is not prime"
    ((start++))
done

echo $start

	    
