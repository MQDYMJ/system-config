#!/bin/bash
. ~/system-config/.bashrc
export PATH=/usr/local/bin:$PATH
function do_it() {
    if test -f .for-code-reading -a ! -L .for-code-reading; then
        (
            if [[ $PWD =~ /.cache/system-config/for-code-reading/ ]]; then
                cd "${PWD#*/.cache/system-config/for-code-reading}";
            fi
            nice for-code-reading
        ) 2>&1 | tee .for-code-reading
    fi
}

for x in `locate .for-code-reading`; do
    cd `dirname $x` && do_it;
done
