#!/bin/bash
exec >/dev/null
. ~/.bashrc
export PATH=/usr/local/bin:$PATH
function do_it() {
    if test -f .for-code-reading -a ! -L .for-code-reading; then
        SOURCECODETAGSMODE=true mkbeagrepidx&
        mkbeagrepidx
        echo -n > .for-code-reading
    fi
}

for x in `locate .for-code-reading`; do
    cd `dirname $x` && do_it;
done
