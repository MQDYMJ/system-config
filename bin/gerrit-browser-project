#!/bin/bash

TEMP=$(getopt -o p: --long port: -n $(basename $0) -- "$@")
port=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -p|--port)
            port=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

host=$(gerrit-review-host $( repo-host 2>/dev/null ))
if test -z "$host"; then
    host=$(repo-xml-sel -B -t -m //default -v @review -n -b $(lookup-file .repo/manifest.xml) | perl -npe 's,.*://,,')
fi

project=$(basename $(repo-project))

if test "$port"; then
    host=$host:$port
fi
firefox "$(printf "%s#q,project:%%255E.*%s,n,z" $host $project)"
