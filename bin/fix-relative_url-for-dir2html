#!/usr/bin/env perl

sub fix_it($) {
    my ($path) = @_;
    if (-d $path) {
        chomp($res = qx(relative-path $path/index.html .));
        return $res;
    } elsif (-e $path) {
        chomp($res = qx(relative-path $path .));
        return $res;
    } else {
        return $path;
    }
}

while (<>) {
    s!href="file://(.*?)"!sprintf 'href="%s"', fix_it($1)!ge;
    print;
}
