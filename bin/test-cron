#!/usr/bin/env bash
minute=$(date +%M | perl -npe 's/^0+//')
minute=$((minute + 1))
hour=$(date +%H|perl -npe 's/^0+//')
if test $minute = 60; then
    minute=0
    ((hour++))
fi
echo "$minute $hour * * * . ~/.config/system-config/.bashrc-path; $(readlink -f $1)" >> ~/.crontab.bhj
crontab ~/.crontab.bhj
