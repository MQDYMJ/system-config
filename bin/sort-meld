#!/usr/bin/env bash
file1=$1
file2=$2

set -e

me=$(readlink -f $0)
if test ! -e "$me"; then
    me=$(readlink -f "$(which $0)")
    if test ! -e "$me"; then
        die "Can't find out about me"
        exit 1
    fi
fi
b0=$(basename $0)

tmpf=~/tmp/$b0.$$
. atexit bash -c "rm $tmpf.*"

cat "$file1" | sort > $tmpf.1
cat "$file2" | sort > $tmpf.2

meld $tmpf.1 $tmpf.2
