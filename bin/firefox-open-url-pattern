#!/bin/bash

function die() {
    echo Error: "$@"
    exit -1
}

clip_save=$(getclip)
function reset_clip() {
    echo "$clip_save" | putclip
}

trap reset_clip 0

exact=
TEMP=$(getopt -o e --long exact -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -e|--exact)
            exact=-e
            shift 1
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $1"
            ;;
    esac
done

if test $# != 2; then
    die "Error: Usage $(basename $0) pattern url"
fi

pattern=$1
url=$2

new_tab=-new-tab

if test ! "$WHICH_TAB"; then
    md5=$(echo "$exact$pattern" | md5sum | pn 1)
    mkdir -p ~/.config/system-config/firefox-pattern/
    (
        flock 9
        if test ! -e ~/.config/system-config/firefox-pattern/$md5; then
            tab=2
            if test -e ~/.config/system-config/firefox-pattern/last-tab; then
                tab=$(cat ~/.config/system-config/firefox-pattern/last-tab|pn 1)
                ((tab++)) || true
            fi
            echo $tab "$exact$pattern" > ~/.config/system-config/firefox-pattern/last-tab
            echo $tab > ~/.config/system-config/firefox-pattern/$md5
        fi
    ) 9> ~/.config/system-config/firefox-pattern/.lock
    WHICH_TAB=$(cat ~/.config/system-config/firefox-pattern/$md5)
fi
WHICH_TAB=$(( (WHICH_TAB - 1) % 9 + 1))

function current_url_matches() {
    local exact=$1
    local current_url=$2
    local pattern=$3

    if (test "$exact" -a "$(echo "$current_url" | unurl.pl)" = "$pattern") || (test ! "$exact" && echo "$current_url" | grep -q -P -e "$pattern"); then
        return 0
    else
        return 1
    fi
}

if test $(uname) != Linux; then
    exec firefox "$url"
fi

current_url=$(get-firefox-tab-url)

if current_url_matches "$exact" "$current_url" "$pattern"; then
    echo nothing to do
else
    firefox push "$current_url"
fi

in_firefox=false
if sawfish-client -e '(window-name (input-focus))'| grep -q -i 'mozilla firefox'; then
    in_firefox=true
fi

if test $in_firefox = true -a "${current_url:0-8}" = 'file:///' || current_url_matches "$exact" "$current_url" "$pattern"; then
    new_tab=-current-tab
elif firefox-search-for-tab $exact "$pattern"; then
    new_tab=-current-tab
else
    sawfish-browser-input "M-$WHICH_TAB"
    this_url=$(get-firefox-tab-url)
    if current_url_matches "$exact" "$this_url" "$pattern"; then
        new_tab=-current-tab
    elif ! firefox-search-for-tab --tabs 1 $exact "$pattern" &&
         (
             find-or-exec firefox || true;
             # EMACS=t yes-or-no-p -y "Open in tab $WHICH_TAB: $this_url?"
         ); then
        new_tab=-current-tab
    fi
fi

if test "$exact"; then
    find-or-exec firefox
    if test "$new_tab" = "-current-tab"; then
        exit 0;
    fi
fi
sawfish-browser-input ISO_Left_Tab ISO_Left_Tab ISO_Left_Tab&
firefox $new_tab "$url"&
