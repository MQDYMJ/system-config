#!/usr/bin/env bash

set -e

target_pwd=$PWD
from_dir=$1
pattern=$2

if test -e "$2"; then
    file=$(readlink -f $2)
fi
cd "$from_dir"

if test $(basename $0) = copy-files-maintain-path; then
    for x in $(find . -iname "$pattern"); do
            d=$target_pwd/$(dirname $x); mkdir -p "$d"; cp $x $d -avi;
    done
else
    for x in $(find . -iname $(basename $pattern)); do
        meld "$x" "$file"
    done
fi
