#!/bin/bash

if echo $SHELLOPTS | grep -q xtrace; then
    export SHELLOPTS
else
    exec > ~/.cache/system-config/logs/of.log 2>&1
fi

set -x

if test $# = 0; then
    set -- "$(xclip -o -selection primary)"
elif test $# = 1; then
    if test -e "$1"; then
        true
    elif [[ $1 =~ ^file:/// ]]; then
        true
    elif test -e "$(lookup-file "$@")"; then
        res=$(lookup-file "$@")
        if test "${res:0:${#PWD}+1}" != "$PWD/" && yes-or-no-p -n "Open $(lookup-file "$@")"; then
            set -- "$(lookup-file "$@")";
        else
            set -- "$(f "$@")"
        fi
    elif ! echo "$@" | grep :// -q; then
        res="$(f "$@")"
        if test -e "$res"; then
            set -- "$res"
        fi
    fi
else
    set -- "$(f "$@")"
fi

if test "$EMACS"; then
    setsid=setsid
else
    setsid=
fi

if test $# = 1 && echo "${1}" | grep -q -i -P -e "^https?://"; then
    $setsid firefox -new-tab "$1"&
    exit
fi

if test "${1##*.}" = chm; then
    $setsid ffchm "$@"
elif readlink -f "$1" | grep -P '/Maildir/.*/cur/'; then
    exec maildir-icedove-view "$(readlink -f "$1")"
    find-or-exec emacs
    $setsid emacsclient -e "(org-open-link-from-string \"$(maildir-get-id "$(readlink -f "$1")")\")"&
else
    $setsid xdg-open "$@"
fi
