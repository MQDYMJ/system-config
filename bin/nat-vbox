#!/bin/sh

set -e
eth0=${1:-eth0}
vboxnet0=${2:-vboxnet0}
if ! which sudo >/dev/null 2>&1; then
    sudo() {
        "$@"
    }
fi
if ! sudo iptables-save | grep -e "-A FORWARD -i $eth0 -o $vboxnet0"; then
    sudo sh -c 'echo 1 > /proc/sys/net/ipv4/ip_forward'
    sudo iptables -t nat -A POSTROUTING -o $eth0 -j MASQUERADE
    sudo iptables -A FORWARD -i $eth0 -o $vboxnet0 -m state --state RELATED,ESTABLISHED -j ACCEPT
    sudo iptables -A FORWARD -i $vboxnet0 -o $eth0 -j ACCEPT
else
    echo iptables already set up correctly.
fi
