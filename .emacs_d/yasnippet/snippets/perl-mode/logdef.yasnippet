# -*- mode: snippet -*-
# key: logdef
# name: logdef
# --
my \$debug;
my \$logfile = \$0;
\$logfile =~ s!.*/!!;   
if (\$ENV{DEBUG} eq 'true') {
   \$debug = *STDERR;
} else {
    open(\$debug, ">", glob("~/.cache/system-config/logs/\$logfile.log"))
        or die "Can not open debug log file ~/.cache/system-config/logs/\$logfile.log";
}
sub debug(@) {
    print \$debug "@_\n";
}
$0