#!/usr/bin/env perl
use strict;
use v5.10;
## start code-generator "^\\s *#\\s *"
# generate-getopt -s perl j:job-pattern q:queue-url
## end code-generator
## start generated code
use Getopt::Long;

Getopt::Long::Configure("default");



my $job_pattern = "";
my $queue_url = "";

my $handler_help = sub {
    print ;
    print "\n\n选项和参数：\n";
    printf "%6s", '-j, ';
    printf "%-24s", '--job-pattern=JOB-PATTERN';
    if (length('--job-pattern=JOB-PATTERN') > 24 and length() > 0) {
        print "\n";
        printf "%30s", "";
    }
    printf "%s", ;
    print "\n";
    printf "%6s", '-q, ';
    printf "%-24s", '--queue-url=QUEUE-URL';
    if (length('--queue-url=QUEUE-URL') > 24 and length() > 0) {
        print "\n";
        printf "%30s", "";
    }
    printf "%s", ;
    print "\n";

    exit(0);
};

GetOptions (
    'job-pattern|j=s' => \$job_pattern,
    'queue-url|q=s' => \$queue_url,
    'help|h!' => \&$handler_help,
);


## end generated code

use JSON;

if ($queue_url) {
    die "Can't do both queue url and job pattern" if $job_pattern;

    my $q_json = decode_json(qx(jc curl ${queue_url}api/json));
    my $id = $q_json->{id};

    say STDERR "about to kill queue: $id";
    system("jc", "curl", "$ENV{scm_jenkins_url}queue/cancelItem?id=$id", "-X", "POST");

    # after kill the queue, double check if it has been started as a actual build.
    $q_json = decode_json(qx(jc curl ${queue_url}api/json));
    my $build_url = $q_json->{executable}{url};
    if ($build_url) {
        say STDERR "also need to kill the running build: $build_url";
        system("jc", "stop-build", "-b", "$build_url");
    }
    exit 0;
}

my $q_json = decode_json(qx(jc curl $ENV{scm_jenkins_url}queue/api/json));

$job_pattern = qr($job_pattern);
for (@{$q_json->{items}}) {
  my $id = $_->{id};
  my $url = $_->{task}{url};
  (my $job = $url) =~ s,.*/([^/]+)/?,$1,;

  if ($job =~ m/$job_pattern/) {
      say "job matched: $ENV{scm_jenkins_url}queue/item/$id/, killing it...";
      system("jc", "curl", "$ENV{scm_jenkins_url}queue/cancelItem?id=$id", "-X", "POST");
  }
}
